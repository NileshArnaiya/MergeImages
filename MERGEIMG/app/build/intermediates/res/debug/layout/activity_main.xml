<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nilayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    android:background="#8cedc1">


    <fragment
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:name="com.tag.photocaptureandgallery.a1"
        android:id="@+id/fragment"
        tools:layout="@layout/a1"
        android:layout_below="@+id/fragment3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:name="com.tag.photocaptureandgallery.c1"
        android:id="@+id/fragment3"
        tools:layout="@layout/c1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:name="com.tag.photocaptureandgallery.d1"
        android:id="@+id/fragment4"
        tools:layout="@layout/d1"
        android:layout_below="@+id/fragment2"
        android:layout_alignLeft="@+id/fragment2"
        android:layout_alignStart="@+id/fragment2" />

    <fragment
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:name="com.tag.photocaptureandgallery.b1"
        android:id="@+id/fragment2"
        tools:layout="@layout/b1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#2eb1ec"

        android:textColor="#fefcfc"

        android:textSize="25sp" />

</RelativeLayout>
